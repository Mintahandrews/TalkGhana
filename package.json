{
  "name": "talkghana",
  "version": "1.0.0",
  "description": "An assistive communication app for speech-impaired individuals in Ghana",
  "type": "module",
  "main": "src/index.tsx",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "server": "node server/index.js",
    "test:whatsapp": "node scripts/test-whatsapp-connection.js",
    "dev": "concurrently \"npm run start\" \"npm run server\"",
    "dev:vite": "vite",
    "dev:server": "node server/index.js",
    "download-dataset": "ts-node src/scripts/download_dataset.ts",
    "train-models": "ts-node src/scripts/train_ghanaian_models.ts",
    "postinstall": "node scripts/postinstall.js",
    "verify": "node scripts/verify-setup.js"
  },
  "dependencies": {
    "@types/react-speech-recognition": "^3.9.6",
    "@xenova/transformers": "^2.15.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "i18next": "^25.0.1",
    "i18next-browser-languagedetector": "^8.0.5",
    "i18next-http-backend": "^3.0.2",
    "idb": "^7.1.1",
    "lucide-react": "^0.503.0",
    "onnxruntime-web": "^1.17.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^15.5.1",
    "react-router-dom": "^6.20.0",
    "react-speech-recognition": "^4.0.0",
    "regenerator-runtime": "^0.14.1",
    "uuid": "^9.0.1",
    "web-speech-cognitive-services": "^7.1.3",
    "workbox-window": "^7.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Mintahandrews/TalkGhana"
  },
  "keywords": [
    "assistive-technology",
    "speech-recognition",
    "text-to-speech",
    "accessibility",
    "ghana",
    "african-languages"
  ],
